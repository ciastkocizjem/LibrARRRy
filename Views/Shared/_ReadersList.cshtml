                    @Html.ActionLink("Details", "Details", "Authors", new { id = item.AuthorId }, new { @class = "btn btn-outline" }) |
                    @Html.ActionLink("Delete", "Delete", "Authors", new { id = item.AuthorId }, new { @class = "btn btn-outline" })
