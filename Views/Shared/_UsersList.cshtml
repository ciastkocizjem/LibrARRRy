@using LibrARRRy.ViewModel
@model IEnumerable<ConfirmReadersViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailConfirmed)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailConfirmed)
            </td>

            <td>
                @if (item.EmailConfirmed == false)
                {
                    @Html.ActionLink("Confirm", "ConfirmWorkerAsync", "ManagePanel", new { id = item.Id }, new { @class = "btn btn-outline" }) <span>| </span>
                }
                @Html.ActionLink("Change role", "ChangeRole", "ManagePanel", new { id = item.Id }, new { @class = "btn btn-outline" }) |
                @Html.ActionLink("Delete", "Delete", "ManagePanel", new { id = item.Id }, new { @class = "btn btn-outline" })
            </td>
        </tr>
    }

</table>

