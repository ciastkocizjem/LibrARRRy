@{
    ViewBag.Title = "Home Page";
}

@section Styles {
    <link href="@Url.Content("~/Content/IndexStyleSheet.css")" rel="stylesheet" type="text/css" />
}


<div class="header">
    <div class="top">
        <h1 id="title">LibrARRRy</h1>
        <div id="social">
            <div class="form-inline">
                <input type="text" class="form-control">
                <button class="btn btn-outline-secondary" type="button"><i class="fa fa-search"></i></button>
                <button class="btn btn-outline-secondary" type="button"><i class="fa fa-shopping-basket"></i></button> 
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="column left mycontent-left">
        <aside>
            <div>
                <!-- DODAĆ LINKI -->
                <p class="categoriesAndTags">Categories:</p>
                <div class="form-group">
                    @foreach (LibrARRRy.Models.Category item in ViewBag.CategoriesList)
                    {
                        <div class="checkbox checkBoxMargin">
                            <label>
                                @Html.CheckBox(item.Name) @item.Name
                            </label>
                        </div>
                    }
                </div>
                <hr />
                <p class="categoriesAndTags">Tags:</p>
                 <div class="form-group">
                    @foreach (LibrARRRy.Models.Tag item in ViewBag.TagsList)
                    {
                     <div class="checkbox checkBoxMargin">
                         <label>
                             @Html.CheckBox(item.Name) @item.Name
                         </label>
                     </div>
                    }
                 </div>
                </div>
</aside>

    </div>
    <div class="column right">
        <section>
            <!--ON CLICKI DODAC-->
            @foreach (LibrARRRy.Models.Book item in ViewBag.BooksList)
            {
                <article>
                    <div>
                        <img class="bookimg" src="~/img/pitbull.jpg" />
                        <br />
                        <p class="bookText">Title: @item.Title</p>
                        <p class="bookText pSameLine"></p>
                        Authors:
                        @foreach (LibrARRRy.Models.Author authors in item.Authors)
                        {
                            <p class="pSameLine"> @authors.Name @authors.Surname</p>
                            if (item.Authors.Count > 1)
                            {
                                <p class="pSameLine">...</p>
                                break;
                            }
                        }
                    </div>
                </article>
            }
        </section>
    </div>
</div>

