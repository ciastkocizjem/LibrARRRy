@model IEnumerable<LibrARRRy.Models.Book>
@{
    ViewBag.Title = "Order";
}

<h2>Order</h2>
<div>
    <table class="table table-hover" width="100%">
        <thead>
            <tr>
                <th>ISBN</th>
                <th>Title</th>
                <th>Category</th>
                <th>Remove</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var book in Model)
            {
                <tr>
                    <td>@book.ISBN</td>
                    <td>@book.Title</td>
                    @*<td>@book.Category.Name</td>*@
                    <td>USUN</td>
                </tr>
            }
        </tbody>
    </table>
</div>
