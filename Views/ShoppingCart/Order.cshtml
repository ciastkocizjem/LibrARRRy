@model IEnumerable<LibrARRRy.Models.Book>
@{
    ViewBag.Title = "Order";
}

<h2>Order</h2>
<div>
    <table class="table table-hover" width="80%">
        <thead>
            <tr>
                <th style="text-align:center;">Cover</th>
                <th style="text-align:center;">ISBN</th>
                <th style="text-align:center;">Title</th>
                <th style="text-align:center;">Remove</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var book in Model)
            {
                <tr style="text-align:center">
                    <td style="width: 200px; align-content:center;"><img src="~/img/bookCover.jpg" style="width:200px;" /></td>
                    <td>@book.ISBN</td>
                    <td>@book.Title</td>

                    <td>

                        <button class="btn btn-info btn-sm" data-slno="@book.BookId" onclick="location.href='@Url.Action("Remove", "ShoppingCart", book)'">
                            ✖
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div style="float:right;">
        @Html.ActionLink(" Wypożycz", "Index", null, new { @class = "btn btn-info fa fa-check btnLoan" })
    </div>

</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
             $(".btnLoan").click(function (e) {
                e.preventDefault();
                var data = $(this).val();

                $.ajax({
                    url: '@Url.Action("Index", "ShoppingCart")',
                    success: function (data) {
                        alert(data.message);
                        location.reload(true);
                    }
                });
            })
        });
    </script>
}
